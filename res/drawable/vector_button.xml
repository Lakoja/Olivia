<?xml version="1.0" encoding="utf-8"?>
<selector
    xmlns:android="http://schemas.android.com/apk/res/android">

    <item android:state_pressed="true" >
        <shape>
            <gradient
                android:startColor="@color/green8"
                android:endColor="@color/green7"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey05" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
    
    <item android:state_checked="true" >
        <shape>
            <gradient
                android:startColor="@color/red3"
                android:endColor="@color/red2"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey05" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item android:state_focused="true" >
        <shape>
            <gradient          
                android:startColor="@color/orange5"
                android:endColor="@color/orange4"
                android:angle="270" />
            <stroke
                android:width="1dp"
                android:color="@color/grey05" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>

    <item>        
        <shape>
            <gradient
                android:startColor="@color/grey07"
                android:endColor="@color/grey03"
                android:angle="270"
                android:type="linear" />
            <stroke
                android:width="1dp"
                android:color="@color/grey05" />
            <corners
                android:radius="3dp" />
            <padding
                android:left="6dp"
                android:top="6dp"
                android:right="6dp"
                android:bottom="6dp" />
        </shape>
    </item>
</selector>
